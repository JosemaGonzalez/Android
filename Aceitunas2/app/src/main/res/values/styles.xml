<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="imagen">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:adjustViewBounds">true</item>
    <item name="android:maxHeight">55dp</item>
    <item name="android:layout_margin">6dp</item>

    <item name="android:maxWidth">55dp</item>
    <item name="android:src">@drawable/pregunta</item>
    <item name="android:contentDescription">@string/descripcion</item>
</style>
    <style name="imagen2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">45dp</item>
        <item name="android:layout_margin">5dp</item>

        <item name="android:maxWidth">45dp</item>
        <item name="android:src">@drawable/pregunta</item>
        <item name="android:contentDescription">@string/descripcion</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
